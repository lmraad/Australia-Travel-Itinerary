<form method="POST" action="/processLogin">

    <div class="title"><b>Log in:</b></div>
    <input class="loginInput" name="username" placeholder="Username">
    <br>

    <input class="loginInput" name="password" placeholder="Password" type="password">
    <br>

    <button class="goButton" type="submit"><b>GO</b></button>

</form>

<form method="POST" action="/processSignUp">

    <div class="title"><b>Sign up:</b></div>
    <input class="loginInput" name="username" placeholder="Username">
    <br>

    <input class="loginInput" name="password" placeholder="Password" type="password">
    <br>

    <button class="goButton" type="submit"><b>GO</b></button>

</form>

{{#if error}}
    <p id="errorMessage">{{error}}</p>
{{/if}}